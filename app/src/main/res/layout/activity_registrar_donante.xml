<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="10dp"
    tools:context="RegistrarDonanteActivity"
    tools:showIn="activity_main">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Documento de Identidad"
        android:inputType="number"
        android:id="@+id/edDocumento"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nombres"
        android:inputType="textAutoComplete"
        android:id="@+id/edNombre"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Apellidos"
        android:inputType="textAutoComplete"
        android:id="@+id/edApellido"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:id="@+id/edEmail"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:inputType="textPassword"
        android:id="@+id/edPassword"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btnFecha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="#d81b2b"
            android:padding="10dp"
            android:text="Seleccionar Fecha"
            android:textAlignment="textEnd"></Button>
        <EditText
            android:id="@+id/edFecha"
            android:layout_width="179dp"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:ems="10"
            android:hint="Fecha de Nacimiento"
            android:inputType="datetime" />

    </LinearLayout>



    <!--<EditText-->
        <!--android:id="@+id/edNumero"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:hint="Nro de Celular"-->
        <!--android:inputType="number" />-->


    <Spinner
        android:id="@+id/spSexo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="Seleccionar Sexo" />

    <Spinner
        android:id="@+id/spTipoSangre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="Seleccionar Tipo de Sangre" />

    <Spinner
        android:id="@+id/spEstadoCivil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="Seleccionar Estado Civil" />

    <Button
        android:id="@+id/btnRegistrar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Registrar" />
</LinearLayout>